    <div class="container" style="margin-top: 100px;">
        <div class="card mb-3" style="max-width: 540px;">
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="/static/<%= post.image %>" class="img-fluid rounded-start" alt="..." width="100px">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= post.title %></h5>
                        <p class="card-text"><%= post.text %></p>
                        <p class="card-text"><small class="text-muted">Last posted: <%= new Date(post.lastPosted).toLocaleString() %></small></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
