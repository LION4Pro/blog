<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100">

  <!-- Sidebar -->
  <div class="flex">
        <div class="w-64 h-screen bg-gray-800 text-white p-4">
          <h2 class="text-2xl font-bold mb-6">Dashboard</h2>
          <ul>
            <li class="mb-4"><a href="#" class="block py-2.5 px-4 rounded hover:bg-gray-700">Home</a></li>
            <li class="mb-4"><a href="#" class="block py-2.5 px-4 rounded hover:bg-gray-700">Messages</a></li>
            <li class="mb-4"><a href="/dashboard/newPost" class="block py-2.5 px-4 rounded hover:bg-gray-700">Add post</a></li>
            <%- include('owner.ejs') %>
            <%- include('admin.ejs') %>
          </ul>
        </div>

        <!-- Main Content -->
        <div class="flex-1 p-10">
          <h1 class="text-3xl font-bold mb-8">Dashboard Overview</h1>

          <!-- Cards -->
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <div class="bg-white p-6 rounded-lg shadow-md">
              <h3 class="text-lg font-semibold mb-2">Total Post</h3>
              <p class="text-gray-700"><%= totalPost %></p>
            </div>
            <div class="bg-white p-6 rounded-lg shadow-md">
              <h3 class="text-lg font-semibold mb-2">Toal Users</h3>
              <p class="text-gray-700"><%= totalUsers %></p>
            </div>
            <div class="bg-white p-6 rounded-lg shadow-md">
              <h3 class="text-lg font-semibold mb-2">Visitors</h3>
              <p class="text-gray-700">3,500</p>
            </div>
            <div class="bg-white p-6 rounded-lg shadow-md">
              <h3 class="text-lg font-semibold mb-2">Messages</h3>
              <p class="text-gray-700">48</p>
            </div>
          </div>

          <!-- Recent Activity -->
          <% if (owner || admin) { %>
            <% if (lastPost && lastRegistred) { %>
              <div class="bg-white p-6 rounded-lg shadow-md">
                <h3 class="text-lg font-semibold mb-4">Recent Activity</h3>
                <ul>
                  <li class="mb-4">
                    <p class="text-gray-700">Last posted: <%= lastPost.title %></p>
                    <p class="text-sm text-gray-500"><%= new Date(lastPost.lastPosted).toLocaleString() %></p>
                  </li>
                  <li class="mb-4">
                    <p class="text-gray-700">Last Registred: <%= lastRegistred.email %></p>
                    <p class="text-sm text-gray-500"><%= new Date(lastRegistred.createdAt).toLocaleString() %></p>
                  </li>
                  <li>
                    <p class="text-gray-700">User Michael Smith commented on your post.</p>
                    <p class="text-sm text-gray-500">5 hours ago</p>
                  </li>
                </ul>
              </div>
            </div>
            <% } %>
        <% } %>

  </div>



  </div>
</body>

</html>